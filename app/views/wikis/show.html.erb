<div>
    <h1>
        <%= to_markdown(@wiki.title) %>
    </h1>
    <p>
        submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user ? @wiki.user.email : "Anonymous User" %>
    </p>
</div>

<div class="row">
    <div class="col-md-8">
        <p><%= to_markdown(@wiki.body) %></p>
    </div>
</div>

<div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
</div>
