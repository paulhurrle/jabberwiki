<div class="title">
    <h1>
        <%= to_markdown(@wiki.title) %>
    </h1>
    <ul class="submitted">
        <li>Submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user ? @wiki.user.email : "Anonymous User" %></li>
    </ul>
</div>

<div class="row">
    <h4><%= to_markdown(@wiki.body) %></h4>

    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete", [@wiki], method: :delete, class: 'btn btn-warning', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
</div>
