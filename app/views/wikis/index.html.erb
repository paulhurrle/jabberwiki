<h1>Wikis</h1>

<div class="row">
    <div class="col-md-8">
        <% @wikis.each do |wiki| %>
        	<% if wiki.private && wiki.user == current_user || !wiki.private || (current_user && current_user.admin?) %>
            	<%= render partial: 'wikis/wiki', locals: {wiki: wiki} %>
            <% end %>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
    </div>
</div>